{
  "name": "pokemon-react",
  "version": "1.0.0",
  "description": "Application to search pokemon details (aka Pokedex)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "parcel $npm_package_parcel_entrypoints --open",
    "build": "parcel build $npm_package_parcel_entrypoints",
    "test": "jest --watchAll"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipnunes/pokemon-react.git"
  },
  "keywords": [
    "react",
    "scss",
    "react-hooks",
    "jest",
    "enzyme"
  ],
  "author": "Phillip Nunes <phillipnunes86@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phillipnunes/pokemon-react/issues"
  },
  "homepage": "https://github.com/phillipnunes/pokemon-react#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@jest/globals": "^26.0.1",
    "babel-jest": "^26.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "sass": "^1.26.7"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "constate": "^2.0.0",
    "css-vars": "^2.2.0",
    "express": "^4.17.1",
    "parcel-bundler": "^1.12.4",
    "path": "^0.12.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-router-dom": "^5.2.0",
    "serve-favicon": "^2.5.0"
  },
  "parcel": {
    "entrypoints": "public/index.html"
  },
  "engines": {
    "node": "12.14.1"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ]
}
